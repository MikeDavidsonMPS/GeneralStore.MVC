@model IEnumerable<GeneralStore.MVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Product List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvetoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductId)
    </td>
    <td>
        @Html.DisplayFor(modelItems => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InvetoryCount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
